#!/bin/sh
#
# Setup u-boot fw_env ....
#

case "$1" in
  start)
	printf "Setup fw_env: "
	echo "# Autogenerated file for sml_hi3798mv200 set-top boxes" >> /tmp/fw_env.conf
	echo "/flash/smartlabs/nvram/nvram0.dat     0x00000         0x8000         0x8000"  >> /tmp/fw_env.conf
	echo "/flash/smartlabs/nvram/nvram1.dat     0x00000         0x8000         0x8000"  >> /tmp/fw_env.conf
	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
  stop)
	true
	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
  restart|reload)
	"$0" stop
	"$0" start
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?
